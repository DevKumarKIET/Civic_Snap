<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFF4FF"
    tools:context=".Fragment.ReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backBtnReport"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/left_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provide as much detail as possible to help us address the issue quickly"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Issue Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Title*"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/issueET"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="e.g., Pothole on Main Street"
            android:background="@drawable/report_et_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category*"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/categoryET"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Select Issue Category"
            android:background="@drawable/report_et_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginTop="4dp"/>

        <!-- Priority -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/report_et_bg"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/priorityET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Medium â€“ Moderate issue"
                android:textSize="14sp"
                android:textColor="#444"/>

            <ImageView
                android:id="@+id/dropdownImage"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/bottom_arrow"/>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description*"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/descriptionET"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:hint="Describe the issue in details....."
            android:background="@drawable/report_et_bg"
            android:padding="12dp"
            android:textSize="14sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="4dp"/>

        <!-- Location -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location*"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/report_et_bg"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/locationTextET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter address or description"
                android:background="@android:color/transparent"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/loactionImage"
                android:src="@drawable/location_icon"
                android:background="@android:color/transparent"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:contentDescription="GPS"/>
        </LinearLayout>

        <!-- Photo (Optional) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo*"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTakePhoto"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Take Photo"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/camera_icon"
                android:background="@drawable/photo_btn_bg"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="0dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUploadPhoto"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Upload Photo"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/upload_icon"
                android:background="@drawable/photo_btn_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:drawableLeft="@drawable/cancel_icon"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false"
                android:background="@drawable/cancel_btn_bg"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="0dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Submit Report"
                android:textAllCaps="false"
                android:background="@drawable/bluebutton"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>